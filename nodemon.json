{
    "watch": ["src/"],
    "restartable": "rs",
    "ext": "js,json,ts",

    "ignore": [
        "tests/*",
        "src/assets/*",
        "src/public/*"
    ],

    "events": {
        "restart": "kill-port 80",
        "crash": "kill-port 80"
    },

    "env": {
        "NODE_ENV": "development"
    }
}