{
    "compilerOptions": {
		"experimentalDecorators": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"],
            "@models/*": ["models/*"],
            "@services/*": ["services/*"],
            "@adapters/*": ["services/adapters/*"]
        },
    },
    "lib": ["es2015"]
}